# CI/CD Configuration for SGN
# This file contains environment-specific configurations for GitHub Actions

# Node.js Configuration
NODE_VERSION=18
PNPM_VERSION=8

# Build Configuration
BUILD_TIMEOUT=600
TEST_TIMEOUT=300
DEPLOY_TIMEOUT=900

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=sgn-sistema-gestao-normativa
DOCKER_TAG_LATEST=latest

# Vercel Configuration
VERCEL_PROJECT_ID=sgn-sistema-gestao-normativa
VERCEL_ORG_ID=your-org-id

# Environment URLs
STAGING_URL=https://sgn-staging.vercel.app
PRODUCTION_URL=https://sgn.vercel.app

# Test Configuration
COVERAGE_THRESHOLD=80
PERFORMANCE_THRESHOLD=90
ACCESSIBILITY_THRESHOLD=90

# Security Configuration
AUDIT_LEVEL=moderate
VULNERABILITY_THRESHOLD=high

# Notification Configuration
SLACK_CHANNEL_DEPLOYMENTS=#deployments
SLACK_CHANNEL_RELEASES=#releases
SLACK_CHANNEL_ALERTS=#alerts

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_INTERVAL=10
